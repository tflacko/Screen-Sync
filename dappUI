import React, { useState, useCallback, useMemo, useEffect } from 'react';
import { 
  Moon, Sun, Globe, Megaphone, Wallet, MapPin, Shield, Users, 
  DollarSign, AlertCircle, TrendingUp, Zap, Lock, X, Calendar, 
  Activity, ChevronRight, Gamepad2, Loader2, Store, LayoutGrid, 
  ArrowUpDown, Clock, FileText, Image, BarChart, Upload, CheckCircle, 
  Link, AlertTriangle, ExternalLink, Copy, RefreshCw 
} from 'lucide-react';
import { useWallet } from '../hooks/useWallet';
import { solanaService, AdSpaceNFT, CampaignSFT, CampaignEscrow } from '../services/solana.service';
import { ipfsService } from '../services/ipfs.service';
import { validator, sanitizer, rateLimiter } from '../utils/validation';
import { WalletMultiButton } from '@solana/wallet-adapter-react-ui';
import toast from 'react-hot-toast';

// ============ CONSTANTS ============
const LAMPORTS_PER_SOL = 1_000_000_000n;
const SLOT_DURATION_OPTIONS = [
  { value: 3600, label: '1 Hour', multiplier: 1 },
  { value: 21600, label: '6 Hours', multiplier: 5.5 },
  { value: 86400, label: '24 Hours', multiplier: 20 },
  { value: 604800, label: '7 Days', multiplier: 120 }
];
const PLATFORM_FEE_BPS = 250; // 2.5%
const MAX_FILE_SIZE = 5 * 1024 * 1024; // 5MB

// ============ TYPES ============
type TransactionStatus = 'idle' | 'preparing' | 'signing' | 'sending' | 'confirming' | 'confirmed' | 'error';

interface TransactionState {
  status: TransactionStatus;
  signature?: string;
  error?: string;
  confirmations?: number;
}

// ============ UTILITY FUNCTIONS ============
const solToLamports = (sol: number): bigint => {
  return BigInt(Math.floor(sol * Number(LAMPORTS_PER_SOL)));
};

const lamportsToSol = (lamports: bigint): number => {
  return Number(lamports) / Number(LAMPORTS_PER_SOL);
};

const formatSol = (lamports: bigint): string => {
  return lamportsToSol(lamports).toFixed(4);
};

// ============ WEBSITE VERIFICATION COMPONENT ============
interface WebsiteVerificationProps {
  websiteUrl: string;
  walletAddress: string;
  onVerificationComplete: (verified: boolean) => void;
}

const WebsiteVerification: React.FC<WebsiteVerificationProps> = ({
  websiteUrl,
  walletAddress,
  onVerificationComplete
}) => {
  const [verificationMethod, setVerificationMethod] = useState<'dns' | 'meta' | 'file'>('dns');
  const [verifying, setVerifying] = useState(false);
  const [verificationResult, setVerificationResult] = useState<any>(null);
  const [copied, setCopied] = useState(false);
  const { truncateAddress } = useWallet();
  
  const verificationInstructions = useMemo(() => {
    switch(verificationMethod) {
      case 'dns':
        return {
          title: 'DNS TXT Record',
          instruction: `Add this TXT record to your domain's DNS:`,
          code: `screensync-verify=${walletAddress}`,
          help: 'This may take up to 48 hours to propagate'
        };
      case 'meta':
        return {
          title: 'HTML Meta Tag',
          instruction: 'Add this meta tag to your website\'s <head> section:',
          code: `<meta name="screensync-wallet" content="${walletAddress}">`,
          help: 'Changes should be immediate once deployed'
        };
      case 'file':
        return {
          title: 'Verification File',
          instruction: 'Create this file at the root of your website:',
          code: `/.well-known/screensync-verify.txt\nContent: ${walletAddress}`,
          help: 'File must be publicly accessible'
        };
    }
  }, [verificationMethod, walletAddress]);
  
  const handleVerify = async () => {
    if (!rateLimiter.isAllowed(walletAddress)) {
      toast.error('Rate limit exceeded. Please try again later.');
      return;
    }

    setVerifying(true);
    try {
      const result = await solanaService.verifyWebsite(websiteUrl, walletAddress);
      setVerificationResult(result);
      if (result.verified) {
        onVerificationComplete(true);
        toast.success('Website verified successfully!');
      }
    } catch (error) {
      console.error('Verification failed:', error);
      toast.error('Verification failed. Please try again.');
    } finally {
      setVerifying(false);
    }
  };
  
  const copyToClipboard = () => {
    navigator.clipboard.writeText(verificationInstructions.code);
    setCopied(true);
    toast.success('Copied to clipboard!');
    setTimeout(() => setCopied(false), 2000);
  };
  
  return (
    <div className="space-y-6">
      <div className="p-4 bg-yellow-500/10 border border-yellow-500/20 rounded-xl">
        <div className="flex items-start space-x-3">
          <AlertTriangle className="w-5 h-5 text-yellow-500 mt-0.5" />
          <div className="flex-1">
            <h4 className="font-semibold text-yellow-500 mb-1">Verification Required</h4>
            <p className="text-sm text-gray-400">
              Prove ownership of {websiteUrl} to list it as an ad space
            </p>
          </div>
        </div>
      </div>
      
      <div className="space-y-3">
        <label className="text-sm font-medium text-gray-400">Verification Method</label>
        <div className="grid grid-cols-3 gap-3">
          {(['dns', 'meta', 'file'] as const).map((method) => (
            <button
              key={method}
              onClick={() => setVerificationMethod(method)}
              className={`p-3 rounded-lg border transition-all ${
                verificationMethod === method
                  ? 'bg-red-500/10 border-red-500/50 text-red-400'
                  : 'bg-gray-800/50 border-gray-700 hover:bg-gray-800'
              }`}
            >
              <div className="text-xs font-semibold uppercase">{method}</div>
            </button>
          ))}
        </div>
      </div>
      
      <div className="p-4 bg-gray-800/50 rounded-xl space-y-3">
        <h4 className="font-semibold text-white">{verificationInstructions.title}</h4>
        <p className="text-sm text-gray-400">{verificationInstructions.instruction}</p>
        
        <div className="relative">
          <pre className="p-3 bg-gray-900/50 rounded-lg text-xs text-green-400 overflow-x-auto">
            {verificationInstructions.code}
          </pre>
          <button
            onClick={copyToClipboard}
            className="absolute top-2 right-2 p-2 rounded-lg bg-gray-800 hover:bg-gray-700 transition-colors"
          >
            {copied ? (
              <CheckCircle className="w-4 h-4 text-green-500" />
            ) : (
              <Copy className="w-4 h-4 text-gray-400" />
            )}
          </button>
        </div>
        
        <p className="text-xs text-gray-500">{verificationInstructions.help}</p>
      </div>
      
      <button
        onClick={handleVerify}
        disabled={verifying}
        className="w-full py-3 rounded-xl font-semibold bg-gradient-to-r from-red-500 to-purple-600 text-white hover:shadow-lg transition-all disabled:opacity-50 disabled:cursor-not-allowed"
      >
        {verifying ? (
          <span className="flex items-center justify-center">
            <Loader2 className="w-5 h-5 mr-2 animate-spin" />
            Verifying...
          </span>
        ) : (
          'Verify Ownership'
        )}
      </button>
      
      {verificationResult && !verificationResult.verified && (
        <div className="p-4 bg-red-500/10 border border-red-500/20 rounded-xl">
          <p className="text-sm text-red-400">
            Verification failed. Please ensure the {verificationMethod.toUpperCase()} record is properly configured and try again.
          </p>
        </div>
      )}
    </div>
  );
};

// ============ AD SPACE LISTING FORM ============
const AdSpaceListingForm: React.FC = () => {
  const { connected, publicKey, sendTransaction } = useWallet();
  const [step, setStep] = useState<'details' | 'verification' | 'pricing' | 'review'>('details');
  const [txState, setTxState] = useState<TransactionState>({ status: 'idle' });
  
  const [formData, setFormData] = useState({
    websiteUrl: '',
    monthlyVisits: '',
    placement: 'header' as 'header' | 'sidebar' | 'footer' | 'inline',
    dimensions: [] as string[],
    pricePerHour: '',
    minimumHours: '24',
    description: ''
  });
  
  const [verified, setVerified] = useState(false);
  const [validationErrors, setValidationErrors] = useState<Record<string, string>>({});
  
  const availableDimensions = [
    { value: '728x90', label: 'Leaderboard (728x90)' },
    { value: '300x250', label: 'Medium Rectangle (300x250)' },
    { value: '336x280', label: 'Large Rectangle (336x280)' },
    { value: '160x600', label: 'Wide Skyscraper (160x600)' },
    { value: '320x50', label: 'Mobile Banner (320x50)' },
    { value: '970x250', label: 'Billboard (970x250)' }
  ];
  
  const validateForm = (): boolean => {
    const errors: Record<string, string> = {};
    
    // Validate URL
    const urlValidation = validator.validateUrl(formData.websiteUrl);
    if (!urlValidation.valid) {
      errors.websiteUrl = urlValidation.error || 'Invalid URL';
    }
    
    // Validate monthly visits
    const visitsValidation = validator.validateNumber(formData.monthlyVisits, {
      min: 100,
      max: 1000000000
    });
    if (!visitsValidation.valid) {
      errors.monthlyVisits = visitsValidation.error || 'Invalid number';
    }
    
    // Validate price
    if (formData.pricePerHour) {
      const priceValidation = validator.validateNumber(formData.pricePerHour, {
        min: 0.001,
        max: 1000,
        allowDecimals: true,
        decimalPlaces: 4
      });
      if (!priceValidation.valid) {
        errors.pricePerHour = priceValidation.error || 'Invalid price';
      }
    }
    
    setValidationErrors(errors);
    return Object.keys(errors).length === 0;
  };
  
  const handleDimensionToggle = (dimension: string) => {
    setFormData(prev => ({
      ...prev,
      dimensions: prev.dimensions.includes(dimension)
        ? prev.dimensions.filter(d => d !== dimension)
        : [...prev.dimensions, dimension]
    }));
  };
  
  const calculatePlatformFee = () => {
    const basePrice = parseFloat(formData.pricePerHour || '0');
    return basePrice * (PLATFORM_FEE_BPS / 10000);
  };
  
  const handleSubmit = async () => {
    if (!connected || !publicKey) {
      toast.error('Please connect your wallet');
      return;
    }
    
    if (!validateForm()) {
      toast.error('Please fix the validation errors');
      return;
    }

    setTxState({ status: 'preparing' });
    
    try {
      const pricePerSlot = solToLamports(parseFloat(formData.pricePerHour));
      
      setTxState({ status: 'signing' });
      toast.loading('Creating your ad space NFT...', { id: 'create-ad-space' });
      
      const result = await solanaService.createAdSpaceNFT({
        websiteUrl: sanitizer.sanitizeUrl(formData.websiteUrl),
        dimensions: formData.dimensions,
        placement: formData.placement,
        monthlyVisits: parseInt(formData.monthlyVisits),
        pricePerSlot,
        minimumSlots: parseInt(formData.minimumHours)
      });
      
      setTxState({ 
        status: 'confirming',
        signature: result.signature 
      });
      
      toast.success('Ad space created successfully!', { id: 'create-ad-space' });
      
      setTxState({ 
        status: 'confirmed',
        signature: result.signature,
        confirmations: 32
      });
      
      // Reset form after success
      setTimeout(() => {
        setFormData({
          websiteUrl: '',
          monthlyVisits: '',
          placement: 'header',
          dimensions: [],
          pricePerHour: '',
          minimumHours: '24',
          description: ''
        });
        setStep('details');
        setVerified(false);
        setTxState({ status: 'idle' });
      }, 3000);
      
    } catch (error: any) {
      console.error('Transaction failed:', error);
      toast.error(error.message || 'Transaction failed', { id: 'create-ad-space' });
      setTxState({ 
        status: 'error',
        error: error.message || 'Transaction failed'
      });
    }
  };
  
  const renderStep = () => {
    switch(step) {
      case 'details':
        return (
          <div className="space-y-6">
            <div>
              <label className="block text-sm font-medium mb-3 text-gray-300">Website URL</label>
              <input
                type="url"
                placeholder="https://example.com"
                className={`w-full p-4 rounded-xl bg-gray-900/50 border ${
                  validationErrors.websiteUrl ? 'border-red-500' : 'border-gray-700'
                } focus:border-red-500 focus:outline-none focus:ring-2 focus:ring-red-500/20`}
                value={formData.websiteUrl}
                onChange={(e) => setFormData({...formData, websiteUrl: e.target.value})}
              />
              {validationErrors.websiteUrl && (
                <p className="text-xs text-red-500 mt-1">{validationErrors.websiteUrl}</p>
              )}
            </div>
            
            <div>
              <label className="block text-sm font-medium mb-3 text-gray-300">Monthly Visitors</label>
              <input
                type="number"
                placeholder="150000"
                className={`w-full p-4 rounded-xl bg-gray-900/50 border ${
                  validationErrors.monthlyVisits ? 'border-red-500' : 'border-gray-700'
                } focus:border-red-500 focus:outline-none`}
                value={formData.monthlyVisits}
                onChange={(e) => setFormData({...formData, monthlyVisits: e.target.value})}
              />
              {validationErrors.monthlyVisits && (
                <p className="text-xs text-red-500 mt-1">{validationErrors.monthlyVisits}</p>
              )}
              <p className="text-xs text-gray-500 mt-2">Approximate monthly unique visitors</p>
            </div>
            
            <div>
              <label className="block text-sm font-medium mb-3 text-gray-300">Ad Placement</label>
              <div className="grid grid-cols-2 gap-3">
                {(['header', 'sidebar', 'footer', 'inline'] as const).map((placement) => (
                  <button
                    key={placement}
                    onClick={() => setFormData({...formData, placement})}
                    className={`p-3 rounded-lg border transition-all capitalize ${
                      formData.placement === placement
                        ? 'bg-red-500/10 border-red-500/50 text-red-400'
                        : 'bg-gray-800/50 border-gray-700 hover:bg-gray-800'
                    }`}
                  >
                    {placement}
                  </button>
                ))}
              </div>
            </div>
            
            <div>
              <label className="block text-sm font-medium mb-3 text-gray-300">Supported Ad Dimensions</label>
              <div className="grid grid-cols-2 gap-3">
                {availableDimensions.map(({ value, label }) => (
                  <button
                    key={value}
                    onClick={() => handleDimensionToggle(value)}
                    className={`p-3 rounded-lg border transition-all text-sm ${
                      formData.dimensions.includes(value)
                        ? 'bg-red-500/10 border-red-500/50 text-red-400'
                        : 'bg-gray-800/50 border-gray-700 hover:bg-gray-800'
                    }`}
                  >
                    {label}
                  </button>
                ))}
              </div>
            </div>
            
            <button
              onClick={() => {
                if (validateForm()) {
                  setStep('verification');
                }
              }}
              disabled={!formData.websiteUrl || !formData.monthlyVisits || formData.dimensions.length === 0}
              className="w-full py-3 rounded-xl font-semibold bg-gradient-to-r from-red-500 to-purple-600 text-white hover:shadow-lg transition-all disabled:opacity-50 disabled:cursor-not-allowed"
            >
              Continue to Verification
            </button>
          </div>
        );
        
      case 'verification':
        return (
          <div className="space-y-6">
            <WebsiteVerification
              websiteUrl={formData.websiteUrl}
              walletAddress={publicKey?.toBase58() || ''}
              onVerificationComplete={(isVerified) => {
                setVerified(isVerified);
                if (isVerified) {
                  setTimeout(() => setStep('pricing'), 1500);
                }
              }}
            />
            
            {verified && (
              <div className="p-4 bg-green-500/10 border border-green-500/20 rounded-xl">
                <div className="flex items-center space-x-3">
                  <CheckCircle className="w-5 h-5 text-green-500" />
                  <div>
                    <p className="font-semibold text-green-500">Verification Successful!</p>
                    <p className="text-sm text-gray-400">Redirecting to pricing...</p>
                  </div>
                </div>
              </div>
            )}
            
            <button
              onClick={() => setStep('details')}
              className="w-full py-3 rounded-xl font-semibold bg-gray-800 text-gray-300 hover:bg-gray-700 transition-all"
            >
              Back to Details
            </button>
          </div>
        );
        
      case 'pricing':
        return (
          <div className="space-y-6">
            <div className="p-4 bg-green-500/10 border border-green-500/20 rounded-xl">
              <div className="flex items-center space-x-3">
                <CheckCircle className="w-5 h-5 text-green-500" />
                <div>
                  <p className="font-semibold text-green-500">Website Verified</p>
                  <p className="text-sm text-gray-400">{formData.websiteUrl}</p>
                </div>
              </div>
            </div>
            
            <div>
              <label className="block text-sm font-medium mb-3 text-gray-300">Price per Hour (SOL)</label>
              <input
                type="number"
                step="0.001"
                placeholder="0.01"
                className={`w-full p-4 rounded-xl bg-gray-900/50 border ${
                  validationErrors.pricePerHour ? 'border-red-500' : 'border-gray-700'
                } focus:border-red-500 focus:outline-none`}
                value={formData.pricePerHour}
                onChange={(e) => setFormData({...formData, pricePerHour: e.target.value})}
              />
              {validationErrors.pricePerHour && (
                <p className="text-xs text-red-500 mt-1">{validationErrors.pricePerHour}</p>
              )}
              <p className="text-xs text-gray-500 mt-2">
                Platform fee ({PLATFORM_FEE_BPS / 100}%): {calculatePlatformFee().toFixed(4)} SOL/hour
              </p>
            </div>
            
            <div>
              <label className="block text-sm font-medium mb-3 text-gray-300">Minimum Booking (Hours)</label>
              <select
                className="w-full p-4 rounded-xl bg-gray-900/50 border border-gray-700 focus:border-red-500 focus:outline-none"
                value={formData.minimumHours}
                onChange={(e) => setFormData({...formData, minimumHours: e.target.value})}
              >
                <option value="1">1 Hour</option>
                <option value="6">6 Hours</option>
                <option value="24">24 Hours (1 Day)</option>
                <option value="168">168 Hours (1 Week)</option>
              </select>
            </div>
            
            <div>
              <label className="block text-sm font-medium mb-3 text-gray-300">Description (Optional)</label>
              <textarea
                placeholder="Describe your audience, content guidelines, peak traffic times..."
                className="w-full p-4 rounded-xl bg-gray-900/50 border border-gray-700 focus:border-red-500 focus:outline-none min-h-[100px]"
                value={formData.description}
                onChange={(e) => setFormData({...formData, description: sanitizer.sanitizeText(e.target.value, 500)})}
                maxLength={500}
              />
              <p className="text-xs text-gray-500 mt-1">{formData.description.length}/500 characters</p>
            </div>
            
            <div className="flex space-x-3">
              <button
                onClick={() => setStep('verification')}
                className="flex-1 py-3 rounded-xl font-semibold bg-gray-800 text-gray-300 hover:bg-gray-700 transition-all"
              >
                Back
              </button>
              <button
                onClick={() => {
                  if (validateForm()) {
                    setStep('review');
                  }
                }}
                disabled={!formData.pricePerHour}
                className="flex-1 py-3 rounded-xl font-semibold bg-gradient-to-r from-red-500 to-purple-600 text-white hover:shadow-lg transition-all disabled:opacity-50"
              >
                Review Listing
              </button>
            </div>
          </div>
        );
        
      case 'review':
        const totalMinimumRevenue = parseFloat(formData.pricePerHour || '0') * parseInt(formData.minimumHours);
        const platformCut = totalMinimumRevenue * (PLATFORM_FEE_BPS / 10000);
        const netRevenue = totalMinimumRevenue - platformCut;
        
        return (
          <div className="space-y-6">
            <h3 className="text-xl font-bold text-white">Review Your Listing</h3>
            
            <div className="p-4 bg-gray-800/50 rounded-xl space-y-3">
              <div className="flex justify-between text-sm">
                <span className="text-gray-400">Website</span>
                <span className="text-white">{formData.websiteUrl}</span>
              </div>
              <div className="flex justify-between text-sm">
                <span className="text-gray-400">Monthly Visitors</span>
                <span className="text-white">{parseInt(formData.monthlyVisits).toLocaleString()}</span>
              </div>
              <div className="flex justify-between text-sm">
                <span className="text-gray-400">Placement</span>
                <span className="text-white capitalize">{formData.placement}</span>
              </div>
              <div className="flex justify-between text-sm">
                <span className="text-gray-400">Ad Formats</span>
                <span className="text-white">{formData.dimensions.length} sizes</span>
              </div>
            </div>
            
            <div className="p-4 bg-gradient-to-r from-red-500/10 to-purple-600/10 border border-red-500/20 rounded-xl space-y-3">
              <div className="flex justify-between text-sm">
                <span className="text-gray-400">Price per Hour</span>
                <span className="text-white">{formData.pricePerHour} SOL</span>
              </div>
              <div className="flex justify-between text-sm">
                <span className="text-gray-400">Minimum Booking</span>
                <span className="text-white">{formData.minimumHours} hours</span>
              </div>
              <div className="flex justify-between text-sm">
                <span className="text-gray-400">Platform Fee</span>
                <span className="text-red-400">-{platformCut.toFixed(4)} SOL</span>
              </div>
              <div className="flex justify-between text-lg font-bold pt-2 border-t border-gray-700">
                <span className="text-white">Min. Net Revenue</span>
                <span className="bg-gradient-to-r from-red-500 to-purple-600 bg-clip-text text-transparent">
                  {netRevenue.toFixed(4)} SOL
                </span>
              </div>
            </div>
            
            {txState.status !== 'idle' && (
              <div className="p-4 bg-gray-800/50 rounded-xl">
                <div className="flex items-center justify-between mb-2">
                  <span className="text-sm font-medium text-gray-400">Transaction Status</span>
                  <span className={`text-sm font-semibold ${
                    txState.status === 'confirmed' ? 'text-green-500' :
                    txState.status === 'error' ? 'text-red-500' :
                    'text-yellow-500'
                  }`}>
                    {txState.status.toUpperCase()}
                  </span>
                </div>
                
                {txState.signature && (
                  <div className="flex items-center space-x-2 text-xs">
                    <span className="text-gray-500">Signature:</span>
                    <span className="font-mono text-gray-400">
                      {txState.signature.substring(0, 20)}...
                    </span>
                    <a 
                      href={`https://explorer.solana.com/tx/${txState.signature}?cluster=devnet`}
                      target="_blank"
                      rel="noopener noreferrer"
                      className="text-blue-400 hover:text-blue-300"
                    >
                      <ExternalLink className="w-3 h-3" />
                    </a>
                  </div>
                )}
                
                {txState.error && (
                  <p className="text-sm text-red-400 mt-2">{txState.error}</p>
                )}
              </div>
            )}
            
            <div className="flex space-x-3">
              <button
                onClick={() => setStep('pricing')}
                disabled={txState.status !== 'idle'}
                className="flex-1 py-3 rounded-xl font-semibold bg-gray-800 text-gray-300 hover:bg-gray-700 transition-all disabled:opacity-50"
              >
                Back
              </button>
              <button
                onClick={handleSubmit}
                disabled={!connected || txState.status !== 'idle'}
                className="flex-1 py-3 rounded-xl font-semibold bg-gradient-to-r from-red-500 to-purple-600 text-white hover:shadow-lg transition-all disabled:opacity-50 disabled:cursor-not-allowed"
              >
                {txState.status === 'preparing' ? 'Preparing...' :
                 txState.status === 'signing' ? 'Sign in Wallet...' :
                 txState.status === 'sending' ? 'Sending...' :
                 txState.status === 'confirming' ? 'Confirming...' :
                 txState.status === 'confirmed' ? 'Success!' :
                 !connected ? 'Connect Wallet' :
                 'Create Listing'}
              </button>
            </div>
          </div>
        );
    }
  };
  
  return (
    <div className="max-w-2xl mx-auto">
      {/* Progress Steps */}
      <div className="flex items-center justify-between mb-8">
        {['details', 'verification', 'pricing', 'review'].map((s, idx) => (
          <div key={s} className="flex items-center">
            <div className={`w-10 h-10 rounded-full flex items-center justify-center font-bold ${
              step === s ? 'bg-gradient-to-r from-red-500 to-purple-600 text-white' :
              ['details', 'verification', 'pricing', 'review'].indexOf(step) > idx ? 'bg-green-500 text-white' :
              'bg-gray-800 text-gray-500'
            }`}>
              {['details', 'verification', 'pricing', 'review'].indexOf(step) > idx ? (
                <CheckCircle className="w-5 h-5" />
              ) : (
                idx + 1
              )}
            </div>
            {idx < 3 && (
              <div className={`w-full h-1 mx-2 ${
                ['details', 'verification', 'pricing', 'review'].indexOf(step) > idx ? 'bg-green-500' : 'bg-gray-800'
              }`} />
            )}
          </div>
        ))}
      </div>
      
      <div className="p-8 rounded-3xl bg-gray-800/40 backdrop-blur-md border border-gray-700">
        {renderStep()}
      </div>
    </div>
  );
};

// ============ CAMPAIGN BUILDER ============
interface CampaignBuilderProps {
  adSpace: AdSpaceNFT;
  onClose: () => void;
}

const CampaignBuilder: React.FC<CampaignBuilderProps> = ({ adSpace, onClose }) => {
  const { connected, publicKey } = useWallet();
  const [selectedSlotOption, setSelectedSlotOption] = useState(SLOT_DURATION_OPTIONS[2]);
  const [numberOfSlots, setNumberOfSlots] = useState(7);
  const [contentFile, setContentFile] = useState<File | null>(null);
  const [targetUrl, setTargetUrl] = useState('');
  const [txState, setTxState] = useState<TransactionState>({ status: 'idle' });
  const [uploadProgress, setUploadProgress] = useState(0);
  const [validationErrors, setValidationErrors] = useState<Record<string, string>>({});
  
  const totalCost = useMemo(() => {
    const baseCost = adSpace.baseRatePerSlot * BigInt(numberOfSlots);
    const platformFee = (baseCost * BigInt(PLATFORM_FEE_BPS)) / 10000n;
    return baseCost + platformFee;
  }, [adSpace.baseRatePerSlot, numberOfSlots]);
  
  const campaignDuration = useMemo(() => {
    const totalSeconds = selectedSlotOption.value * numberOfSlots;
    const days = Math.floor(totalSeconds / 86400);
    const hours = Math.floor((totalSeconds % 86400) / 3600);
    return { days, hours, totalSeconds };
  }, [selectedSlotOption, numberOfSlots]);
  
  const validateInputs = (): boolean => {
    const errors: Record<string, string> = {};
    
    if (!contentFile) {
      errors.contentFile = 'Please upload an ad creative';
    }
    
    const urlValidation = validator.validateUrl(targetUrl);
    if (!urlValidation.valid) {
      errors.targetUrl = urlValidation.error || 'Invalid URL';
    }
    
    setValidationErrors(errors);
    return Object.keys(errors).length === 0;
  };
  
  const handleFileUpload = (e: React.ChangeEvent<HTMLInputElement>) => {
    const file = e.target.files?.[0];
    if (!file) return;
    
    const fileValidation = validator.validateFile(file, {
      maxSize: MAX_FILE_SIZE,
      allowedTypes: ['image/jpeg', 'image/png', 'image/gif', 'image/webp', 'video/mp4', 'video/webm']
    });
    
    if (!fileValidation.valid) {
      toast.error(fileValidation.error || 'Invalid file');
      return;
    }
    
    setContentFile(file);
    setValidationErrors(prev => ({...prev, contentFile: ''}));
  };
  
  const handleCreateCampaign = async () => {
    if (!connected || !publicKey) {
      toast.error('Please connect your wallet');
      return;
    }
    
    if (!validateInputs()) {
      toast.error('Please fix the validation errors');
      return;
    }
    
    if (!contentFile) return;

    setTxState({ status: 'preparing' });
    
    try {
      // Upload content to IPFS
      setUploadProgress(20);
      toast.loading('Uploading content to IPFS...', { id: 'campaign-create' });
      
      const ipfsResult = await ipfsService.uploadFile(contentFile, {
        name: `Campaign-${adSpace.mint.substring(0, 8)}`,
        keyvalues: {
          advertiser: publicKey.toBase58(),
          adSpace: adSpace.mint
        }
      });
      
      setUploadProgress(60);
      
      setTxState({ status: 'signing' });
      setUploadProgress(80);
      
      const result = await solanaService.createCampaignSFT({
        adSpaceMint: adSpace.mint,
        contentHash: ipfsResult.hash,
        slots: numberOfSlots,
        slotDuration: selectedSlotOption.value,
        totalCost
      });
      
      setTxState({ 
        status: 'confirming',
        signature: result.signature 
      });
      setUploadProgress(100);
      
      toast.success('Campaign created successfully!', { id: 'campaign-create' });
      
      setTxState({ 
        status: 'confirmed',
        signature: result.signature,
        confirmations: 32
      });
      
      setTimeout(() => {
        onClose();
      }, 2000);
      
    } catch (error: any) {
      console.error('Campaign creation failed:', error);
      toast.error(error.message || 'Failed to create campaign', { id: 'campaign-create' });
      setTxState({ 
        status: 'error',
        error: error.message || 'Failed to create campaign'
      });
    }
  };
  
  return (
    <div className="fixed inset-0 z-50 flex items-center justify-center p-4 bg-black/50">
      <div className="max-w-3xl w-full max-h-[90vh] overflow-y-auto rounded-3xl bg-gray-900/95 backdrop-blur-xl border border-gray-700">
        <div className="sticky top-0 z-10 p-6 border-b border-gray-700 bg-gray-900/95 backdrop-blur-xl flex items-center justify-between">
          <div>
            <h2 className="text-2xl font-bold text-white">Create Campaign</h2>
            <p className="text-gray-400 text-sm mt-1">{adSpace.specifications.websiteUrl}</p>
          </div>
          <button
            onClick={onClose}
            className="p-2 rounded-lg hover:bg-gray-800 transition-colors"
          >
            <X className="w-6 h-6 text-gray-400" />
          </button>
        </div>
        
        <div className="p-6 space-y-6">
          {/* Ad Space Details */}
          <div className="p-4 bg-gray-800/50 rounded-xl">
            <h3 className="font-semibold text-white mb-3">Ad Space Details</h3>
            <div className="grid grid-cols-2 gap-4 text-sm">
              <div>
                <span className="text-gray-400">Monthly Visitors</span>
                <p className="text-white font-semibold">{adSpace.specifications.monthlyVisits.toLocaleString()}</p>
              </div>
              <div>
                <span className="text-gray-400">Placement</span>
                <p className="text-white font-semibold capitalize">{adSpace.specifications.placement}</p>
              </div>
              <div>
                <span className="text-gray-400">Available Sizes</span>
                <p className="text-white font-semibold">{adSpace.specifications.dimensions.join(', ')}</p>
              </div>
              <div>
                <span className="text-gray-400">Base Rate</span>
                <p className="text-white font-semibold">{formatSol(adSpace.baseRatePerSlot)} SOL/hour</p>
              </div>
            </div>
          </div>
          
          {/* Content Upload */}
          <div>
            <label className="block text-sm font-medium mb-3 text-gray-300">Ad Creative</label>
            <div className={`border-2 border-dashed rounded-xl p-6 text-center ${
              contentFile ? 'border-green-500 bg-green-500/10' : 
              validationErrors.contentFile ? 'border-red-500 bg-red-500/10' : 
              'border-gray-700 bg-gray-800/50'
            }`}>
              {contentFile ? (
                <div className="space-y-2">
                  <CheckCircle className="w-8 h-8 mx-auto text-green-500" />
                  <p className="text-sm text-white font-semibold">{contentFile.name}</p>
                  <p className="text-xs text-gray-400">{(contentFile.size / 1024).toFixed(1)} KB</p>
                  <button
                    onClick={() => setContentFile(null)}
                    className="text-xs text-red-400 hover:text-red-300"
                  >
                    Remove
                  </button>
                </div>
              ) : (
                <label className="cursor-pointer">
                  <Upload className="w-8 h-8 mx-auto text-gray-500 mb-2" />
                  <p className="text-sm text-gray-400">Click to upload image or video</p>
                  <p className="text-xs text-gray-500 mt-1">Max size: 5MB</p>
                  <input
                    type="file"
                    className="hidden"
                    accept="image/*,video/*"
                    onChange={handleFileUpload}
                  />
                </label>
              )}
            </div>
            {validationErrors.contentFile && (
              <p className="text-xs text-red-500 mt-1">{validationErrors.contentFile}</p>
            )}
          </div>
          
          {/* Target URL */}
          <div>
            <label className="block text-sm font-medium mb-3 text-gray-300">Click-through URL</label>
            <input
              type="url"
              placeholder="https://your-landing-page.com"
              className={`w-full p-4 rounded-xl bg-gray-900/50 border ${
                validationErrors.targetUrl ? 'border-red-500' : 'border-gray-700'
              } focus:border-red-500 focus:outline-none`}
              value={targetUrl}
              onChange={(e) => setTargetUrl(e.target.value)}
            />
            {validationErrors.targetUrl && (
              <p className="text-xs text-red-500 mt-1">{validationErrors.targetUrl}</p>
            )}
          </div>
          
          {/* Duration Selection */}
          <div>
            <label className="block text-sm font-medium mb-3 text-gray-300">Slot Duration</label>
            <div className="grid grid-cols-2 gap-3">
              {SLOT_DURATION_OPTIONS.map((option) => (
                <button
                  key={option.value}
                  onClick={() => setSelectedSlotOption(option)}
                  className={`p-3 rounded-lg border transition-all ${
                    selectedSlotOption.value === option.value
                      ? 'bg-red-500/10 border-red-500/50 text-red-400'
                      : 'bg-gray-800/50 border-gray-700 hover:bg-gray-800'
                  }`}
                >
                  <div className="font-semibold">{option.label}</div>
                  <div className="text-xs text-gray-500">Ã—{option.multiplier} efficiency</div>
                </button>
              ))}
            </div>
          </div>
          
          {/* Number of Slots */}
          <div>
            <label className="block text-sm font-medium mb-3 text-gray-300">
              Number of Slots ({selectedSlotOption.label} each)
            </label>
            <div className="flex items-center space-x-4">
              <input
                type="range"
                min={adSpace.minimumSlots}
                max="168"
                value={numberOfSlots}
                onChange={(e) => setNumberOfSlots(parseInt(e.target.value))}
                className="flex-1"
              />
              <div className="min-w-[100px] text-right">
                <span className="text-2xl font-bold text-white">{numberOfSlots}</span>
                <span className="text-sm text-gray-400 ml-1">slots</span>
              </div>
            </div>
            <p className="text-xs text-gray-500 mt-2">
              Total duration: {campaignDuration.days} days, {campaignDuration.hours} hours
            </p>
          </div>
          
          {/* Cost Summary */}
          <div className="p-4 bg-gradient-to-r from-red-500/10 to-purple-600/10 border border-red-500/20 rounded-xl">
            <h3 className="font-semibold text-white mb-3">Payment Summary</h3>
            <div className="space-y-2">
              <div className="flex justify-between text-sm">
                <span className="text-gray-400">
                  Base Cost ({numberOfSlots} Ã— {formatSol(adSpace.baseRatePerSlot)} SOL)
                </span>
                <span className="text-white">
                  {formatSol(adSpace.baseRatePerSlot * BigInt(numberOfSlots))} SOL
                </span>
              </div>
              <div className="flex justify-between text-sm">
                <span className="text-gray-400">Platform Fee ({PLATFORM_FEE_BPS / 100}%)</span>
                <span className="text-white">
                  {formatSol((adSpace.baseRatePerSlot * BigInt(numberOfSlots) * BigInt(PLATFORM_FEE_BPS)) / 10000n)} SOL
                </span>
              </div>
              <div className="flex justify-between text-lg font-bold pt-2 border-t border-gray-700">
                <span className="text-white">Total</span>
                <span className="bg-gradient-to-r from-red-500 to-purple-600 bg-clip-text text-transparent">
                  {formatSol(totalCost)} SOL
                </span>
              </div>
            </div>
            
            <div className="mt-4 p-3 bg-gray-900/50 rounded-lg">
              <p className="text-xs text-gray-400">
                Payment will be held in escrow and released to the publisher based on the campaign schedule.
                You can pause or cancel anytime for a prorated refund.
              </p>
            </div>
          </div>
          
          {/* Upload Progress */}
          {uploadProgress > 0 && uploadProgress < 100 && (
            <div className="p-4 bg-gray-800/50 rounded-xl">
              <div className="flex justify-between text-sm mb-2">
                <span className="text-gray-400">Uploading to IPFS</span>
                <span className="text-white">{uploadProgress}%</span>
              </div>
              <div className="w-full h-2 bg-gray-700 rounded-full overflow-hidden">
                <div 
                  className="h-full bg-gradient-to-r from-red-500 to-purple-600 transition-all duration-300"
                  style={{ width: `${uploadProgress}%` }}
                />
              </div>
            </div>
          )}
          
          {/* Transaction Status */}
          {txState.status !== 'idle' && (
            <div className="p-4 bg-gray-800/50 rounded-xl">
              <div className="flex items-center justify-between mb-2">
                <span className="text-sm font-medium text-gray-400">Transaction Status</span>
                <span className={`text-sm font-semibold ${
                  txState.status === 'confirmed' ? 'text-green-500' :
                  txState.status === 'error' ? 'text-red-500' :
                  'text-yellow-500'
                }`}>
                  {txState.status.toUpperCase()}
                </span>
              </div>
              
              {txState.signature && (
                <div className="flex items-center space-x-2 text-xs">
                  <span className="text-gray-500">Signature:</span>
                  <span className="font-mono text-gray-400">
                    {txState.signature.substring(0, 20)}...
                  </span>
                  <a 
                    href={`https://explorer.solana.com/tx/${txState.signature}?cluster=devnet`}
                    target="_blank"
                    rel="noopener noreferrer"
                    className="text-blue-400 hover:text-blue-300"
                  >
                    <ExternalLink className="w-3 h-3" />
                  </a>
                </div>
              )}
              
              {txState.error && (
                <p className="text-sm text-red-400 mt-2">{txState.error}</p>
              )}
            </div>
          )}
          
          {/* Action Buttons */}
          <div className="flex space-x-3">
            <button
              onClick={onClose}
              className="flex-1 py-3 rounded-xl font-semibold bg-gray-800 text-gray-300 hover:bg-gray-700 transition-all"
            >
              Cancel
            </button>
            <button
              onClick={handleCreateCampaign}
              disabled={!connected || !contentFile || !targetUrl || txState.status !== 'idle'}
              className="flex-1 py-3 rounded-xl font-semibold bg-gradient-to-r from-red-500 to-purple-600 text-white hover:shadow-lg transition-all disabled:opacity-50 disabled:cursor-not-allowed"
            >
              {txState.status === 'preparing' ? 'Preparing...' :
               txState.status === 'signing' ? 'Sign Transaction...' :
               txState.status === 'confirming' ? 'Confirming...' :
               txState.status === 'confirmed' ? 'Campaign Created!' :
               !connected ? 'Connect Wallet' :
               'Create Campaign'}
            </button>
          </div>
        </div>
      </div>
    </div>
  );
};

// ============ AD SPACE CARD ============
interface AdSpaceCardProps {
  adSpace: AdSpaceNFT;
  onSelect: (adSpace: AdSpaceNFT) => void;
}

const AdSpaceCard: React.FC<AdSpaceCardProps> = ({ adSpace, onSelect }) => {
  const ratePerDay = lamportsToSol(adSpace.baseRatePerSlot * 24n);
  
  return (
    <div className="group rounded-2xl border border-gray-700 overflow-hidden transition-all duration-500 hover:scale-105 hover:shadow-2xl bg-gray-800/40 backdrop-blur-md">
      <div className="p-6">
        <div className="flex items-start justify-between mb-4">
          <div>
            <h3 className="text-lg font-bold text-white mb-1">{adSpace.specifications.websiteUrl}</h3>
            <div className="flex items-center space-x-2">
              {adSpace.verificationStatus === 'verified' ? (
                <div className="flex items-center space-x-1 text-green-400">
                  <CheckCircle className="w-4 h-4" />
                  <span className="text-xs font-semibold">Verified</span>
                </div>
              ) : (
                <div className="flex items-center space-x-1 text-yellow-400">
                  <AlertCircle className="w-4 h-4" />
                  <span className="text-xs font-semibold">Pending</span>
                </div>
              )}
              <span className="px-2 py-1 rounded-full text-xs bg-blue-500/20 text-blue-400">
                {adSpace.specifications.placement}
              </span>
            </div>
          </div>
        </div>
        
        <div className="space-y-3 mb-4">
          <div className="flex items-center text-sm text-gray-400">
            <Users className="w-4 h-4 mr-2 text-purple-500" />
            {adSpace.specifications.monthlyVisits.toLocaleString()} monthly visitors
          </div>
          <div className="flex items-center text-sm text-gray-400">
            <Image className="w-4 h-4 mr-2 text-blue-500" />
            {adSpace.specifications.dimensions.length} ad formats supported
          </div>
          <div className="flex flex-wrap gap-2 mt-2">
            {adSpace.specifications.dimensions.slice(0, 3).map(dim => (
              <span key={dim} className="px-2 py-1 rounded text-xs bg-gray-700/50 text-gray-300">
                {dim}
              </span>
            ))}
            {adSpace.specifications.dimensions.length > 3 && (
              <span className="px-2 py-1 rounded text-xs bg-gray-700/50 text-gray-400">
                +{adSpace.specifications.dimensions.length - 3} more
              </span>
            )}
          </div>
        </div>
        
        <div className="flex items-center justify-between pt-4 border-t border-gray-700">
          <div>
            <span className="text-xs text-gray-500 block mb-1">Starting at</span>
            <div className="flex items-baseline">
              <span className="text-2xl font-bold text-white">
                {ratePerDay.toFixed(3)}
              </span>
              <span className="text-sm text-gray-400 ml-1">SOL/day</span>
            </div>
          </div>
          <button
            onClick={() => onSelect(adSpace)}
            className="px-5 py-2.5 rounded-xl font-semibold bg-gradient-to-r from-red-500 to-purple-600 text-white hover:shadow-lg hover:scale-105 transition-all"
          >
            Book Now
          </button>
        </div>
      </div>
    </div>
  );
};

// ============ MAIN APP ============
const ScreenSyncApp: React.FC = () => {
  const [currentView, setCurrentView] = useState<'marketplace' | 'list'>('marketplace');
  const [adSpaces, setAdSpaces] = useState<AdSpaceNFT[]>([]);
  const [selectedAdSpace, setSelectedAdSpace] = useState<AdSpaceNFT | null>(null);
  const [loading, setLoading] = useState(false);
  
  const wallet = useWallet();
  
  // Load ad spaces
  useEffect(() => {
    const loadAdSpaces = async () => {
      if (!wallet.connected) {
        setAdSpaces([]);
        return;
      }

      setLoading(true);
      try {
        const spaces = await solanaService.fetchAdSpaces({ verified: true });
        setAdSpaces(spaces);
      } catch (error) {
        console.error('Failed to load ad spaces:', error);
        toast.error('Failed to load marketplace');
      } finally {
        setLoading(false);
      }
    };
    
    loadAdSpaces();
    // Refresh every 30 seconds
    const interval = setInterval(loadAdSpaces, 30000);
    return () => clearInterval(interval);
  }, [wallet.connected]);
  
  // Request airdrop for devnet
  const handleRequestAirdrop = async () => {
    if (wallet.network === 'devnet') {
      const signature = await wallet.requestAirdrop(1);
      if (signature) {
        console.log('Airdrop signature:', signature);
      }
    }
  };
  
  return (
    <div className="min-h-screen bg-gradient-to-br from-gray-950 via-gray-900 to-gray-950 text-white">
      {/* Header */}
      <header className="sticky top-0 z-40 bg-gray-800/40 backdrop-blur-md border-b border-gray-700">
        <div className="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div className="flex items-center justify-between h-16">
            <div className="flex items-center space-x-6">
              <h1 className="text-2xl font-black bg-gradient-to-r from-gray-300 to-red-600 bg-clip-text text-transparent">
                Screen Sync
              </h1>
              
              <div className="flex items-center bg-gray-900/50 rounded-xl p-1">
                <button
                  onClick={() => setCurrentView('marketplace')}
                  className={`px-4 py-2 rounded-lg transition-all flex items-center space-x-2 ${
                    currentView === 'marketplace'
                      ? 'bg-gradient-to-r from-red-500 to-purple-600 text-white'
                      : 'text-gray-400 hover:text-white'
                  }`}
                >
                  <LayoutGrid className="w-4 h-4" />
                  <span className="text-sm font-medium">Browse</span>
                </button>
                
                <button
                  onClick={() => setCurrentView('list')}
                  className={`px-4 py-2 rounded-lg transition-all flex items-center space-x-2 ${
                    currentView === 'list'
                      ? 'bg-gradient-to-r from-red-500 to-purple-600 text-white'
                      : 'text-gray-400 hover:text-white'
                  }`}
                >
                  <Store className="w-4 h-4" />
                  <span className="text-sm font-medium">List Space</span>
                </button>
              </div>
            </div>
            
            <div className="flex items-center space-x-4">
              <div className="text-xs text-gray-400">
                Network: <span className="text-yellow-400 font-semibold">{wallet.network}</span>
              </div>
              
              {wallet.connected && wallet.balance > 0n && (
                <div className="px-3 py-1.5 rounded-lg bg-gray-900/50 border border-gray-700">
                  <span className="text-sm font-mono text-gray-300">
                    {wallet.formatBalance(wallet.balance)} SOL
                  </span>
                </div>
              )}
              
              {wallet.network === 'devnet' && wallet.connected && (
                <button
                  onClick={handleRequestAirdrop}
                  className="px-3 py-1.5 rounded-lg bg-blue-500/10 hover:bg-blue-500/20 border border-blue-500/20 text-blue-400 text-sm transition-colors"
                >
                  Airdrop
                </button>
              )}
              
              <WalletMultiButton className="!bg-gradient-to-r !from-red-500 !to-purple-600" />
            </div>
          </div>
        </div>
      </header>
      
      {/* Main Content */}
      <main className="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        {currentView === 'marketplace' ? (
          <>
            <div className="mb-8">
              <h2 className="text-3xl font-bold mb-2">Website Ad Spaces</h2>
              <p className="text-gray-400">Book advertising space on verified websites with transparent pricing</p>
            </div>
            
            {!wallet.connected ? (
              <div className="text-center py-16">
                <Wallet className="w-16 h-16 mx-auto text-gray-700 mb-4" />
                <h3 className="text-xl font-semibold mb-2">Connect Your Wallet</h3>
                <p className="text-gray-400 mb-6">Connect your wallet to browse and book ad spaces</p>
                <WalletMultiButton className="!bg-gradient-to-r !from-red-500 !to-purple-600" />
              </div>
            ) : loading ? (
              <div className="flex justify-center py-16">
                <Loader2 className="w-8 h-8 animate-spin text-purple-500" />
              </div>
            ) : adSpaces.length > 0 ? (
              <div className="grid grid-cols-1 md:grid-cols-2 gap-6">
                {adSpaces.map((space) => (
                  <AdSpaceCard
                    key={space.mint}
                    adSpace={space}
                    onSelect={setSelectedAdSpace}
                  />
                ))}
              </div>
            ) : (
              <div className="text-center py-16">
                <Globe className="w-16 h-16 mx-auto text-gray-700 mb-4" />
                <h3 className="text-xl font-semibold mb-2">No Ad Spaces Available</h3>
                <p className="text-gray-400 mb-6">Be the first to list your website!</p>
                <button
                  onClick={() => setCurrentView('list')}
                  className="px-6 py-3 rounded-xl bg-gradient-to-r from-red-500 to-purple-600 text-white font-semibold hover:shadow-lg transition-all"
                >
                  List Your Website
                </button>
              </div>
            )}
          </>
        ) : (
          <>
            <div className="mb-8">
              <h2 className="text-3xl font-bold mb-2">List Your Website</h2>
              <p className="text-gray-400">Monetize your web traffic with direct advertiser payments</p>
            </div>
            
            {!wallet.connected ? (
              <div className="text-center py-16">
                <Wallet className="w-16 h-16 mx-auto text-gray-700 mb-4" />
                <h3 className="text-xl font-semibold mb-2">Connect Your Wallet</h3>
                <p className="text-gray-400 mb-6">Connect your wallet to list your ad space</p>
                <WalletMultiButton className="!bg-gradient-to-r !from-red-500 !to-purple-600" />
              </div>
            ) : (
              <AdSpaceListingForm />
            )}
          </>
        )}
      </main>
      
      {/* Campaign Builder Modal */}
      {selectedAdSpace && (
        <CampaignBuilder
          adSpace={selectedAdSpace}
          onClose={() => setSelectedAdSpace(null)}
        />
      )}
    </div>
  );
};

export default ScreenSyncApp;
