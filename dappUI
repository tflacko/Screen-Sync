  const [userData, setUserData] = useState({
    wallet: '',
    type: '',
    location: ''
  });

  // Theme configuration
  const bgClass = darkMode ? 'bg-gray-950 text-white' : 'bg-gray-50 text-gray-900';
  const cardBg = darkMode ? 'bg-gray-900 border-gray-700' : 'bg-white border-gray-200';

